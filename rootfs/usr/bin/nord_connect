#!/usr/bin/with-contenv bash
set -x

[[ -n ${PRE_CONNECT} ]] && eval ${PRE_CONNECT}

ps -ef

ls -la /run/nordvpn/

cat /tmp/nordvpnd.log

iptables-legacy --list-rules

iptables-legacy --list

sysctl net.ipv4.conf.all.rp_filter

nordvpn settings

nordvpn status

echo "Connecting..."
current_sleep=2
until nordvpn connect ${CONNECT}; do
  echo "Unable to connect retrying in ${current_sleep} seconds."
  sleep ${current_sleep}
done

[[ -n ${POST_CONNECT} ]] && eval ${POST_CONNECT}

exit 0